<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginAndRegister.PaymentConfirm">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="251dp"
        android:layout_height="348dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.381"
        app:srcCompat="@drawable/optimate" />

    <Button
        android:id="@+id/confirmedButton"
        android:layout_width="108dp"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.503" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="96dp"
        android:layout_height="88dp"
        android:layout_marginStart="5dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/confirmedButton"
        app:layout_constraintEnd_toEndOf="@+id/confirmedButton"
        app:layout_constraintStart_toStartOf="@+id/confirmedButton"
        app:layout_constraintTop_toTopOf="@+id/confirmedButton"
        app:srcCompat="?android:attr/textCheckMark" />

    <TextView
        android:id="@+id/Paid"
        android:layout_width="103dp"
        android:layout_height="38dp"
        android:text="@string/Paid"
        android:textAlignment="center"
        android:textSize="34sp"
        android:fontFamily="@font/baloo"
        app:layout_constraintBottom_toTopOf="@+id/confirmedButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.555" />

</androidx.constraintlayout.widget.ConstraintLayout>