<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginAndRegister.PasswordReset">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="411dp"
        android:layout_height="444dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.055"
        app:srcCompat="@drawable/optimate"
         />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/resetEmailInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="@+id/resetEmail"
        app:layout_constraintEnd_toEndOf="@+id/resetEmail"
        app:layout_constraintStart_toStartOf="@+id/resetEmail"
        app:layout_constraintTop_toTopOf="@+id/resetEmail" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/resetEmail"
        android:layout_width="353dp"
        android:layout_height="80dp"
        android:hint="@string/email"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.329"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/resetBtn"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="315dp"
        android:layout_height="63dp"
        android:backgroundTint="@color/light_green"
        android:elevation="10dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/reset"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:cornerRadius="10dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resetEmailInputLayout"
        app:layout_constraintVertical_bias="0.614"
        app:strokeColor="@color/dark_purple"
        app:strokeWidth="1dp" />
</androidx.constraintlayout.widget.ConstraintLayout>